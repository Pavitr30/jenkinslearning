pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                echo 'Checking out code...'
            }
        }

        stage('Compile') {
            steps {
                bat 'javac hello.java'
            }
        }

        stage('Run') {
            steps {
                bat 'java hello'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                bat 'java hello'
            }
        }
    }
}
